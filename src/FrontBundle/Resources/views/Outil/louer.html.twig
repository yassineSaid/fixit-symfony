{% extends "front.html.twig" %}
{% block sidebar %}
    {{ parent() }}
{% endblock %}

{% block content %}
    <script type="text/javascript">
        function amount() {
            document.getElementById("total").value=(" DT");
        }
    </script>
    <!--************************************
				Main Start
		*************************************-->
    <main id="tg-main" class="tg-main tg-paddingzero tg-haslayout">
        <!--************************************
                Login Register Start
        *************************************-->
        <div class="tg-main-section tg-haslayout">
            <div class="container">
                <div class="row">
                    <div id="tg-content" class="tg-content">
                        <form class="tg-themeform tg-formlogin-register" onkeyup="amount()">
                            <div class="col-xs-12 col-sm-8 col-md-8 col-lg-8">
                                <div class="tg-heading">
                                    <h2>Informations de location</h2>
                                </div>
                                <fieldset>
                                    <div class="tg-themetabcontent tab-content">
                                        <div class="tab-pane active fade in" id="regularuser">
                                            <div class="form-group">
                                                <input type="text" name="username" class="form-control" value="{{ user.username }}" disabled>
                                            </div>
                                            <div class="form-group">
                                                <input type="text" name="username" class="form-control" value="{{ outil.dureeMaximale }}" disabled>
                                            </div>
                                            <div class="form-group">
                                                <label for="inputDuree">La date de location</label>
                                                <input type="datetime-local" name="dateLocation" class="form-control" >
                                            </div>
                                            <div class="form-group">
                                                <label for="inputDuree">La date de retour</label>
                                                <input type="datetime-local" name="dateRetour" class="form-control" >
                                            </div>
                                            <div class="form-group">
                                                <input type="txt" id="total" class="form-control" placeholder="0/dt" disabled>
                                            </div>
                                            <div class="form-group">
                                                <div class="tg-checkbox">
                                                    <input type="checkbox" id="terms">
                                                    <label for="terms">I have read the <a href="javascript:void(0);" data-toggle="modal" data-target=".tg-categoryModal">Terms &amp; Conditions</a> and accept them</label>
                                                </div>
                                            </div>
                                            <button class="tg-btn" type="submit">Louer</button>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>
                            <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
                                <div class="tg-loginarea">
                                    <div class="tg-bordertitle">
                                        <h2>Outil</h2>
                                    </div>
                                    <fieldset>
                                        <figure class="tg-featuredimg">
                                            <img src="{{ asset('uploads/images/outil/' ~ outil.image ) }}" style="width: 200px" alt="image description">

                                        </figure>
                                        <div class="tg-title">
                                            <h2><a href="#">{{ outil.nom }}</a></h2>
                                        </div>
                                        <ul class="tg-companycontactinfo">
                                            <li>
                                                <img src="{{ asset('uploads/images/categorieOutil/' ~ outil.CategorieOutils.logo ) }}" width="30">
                                                <span data-toggle="tooltip" data-placement="top" title="Click to view Number" data-last="34 - 562 - 6">{{ outil.CategorieOutils.nom }}</em></span>
                                            </li>
                                            <li>
                                                <img src="{{ asset("service/images/icons/adresse.png") }}" width="30">
                                                <span data-toggle="tooltip" data-placement="top" title="Click to view Number" data-last="34 - 562 - 6">{{ outil.adresse }} ,{{ outil.ville }}</em></span>
                                            </li>

                                            <li>
                                                <img src="{{ asset("service/images/icons/scoin.png") }}" width="30">
                                                <span data-toggle="tooltip" data-placement="top" title="Click to view Number" data-last="34 - 562 - 6">{{ outil.prix }}</em></span>
                                            </li>
                                        </ul>
                                    </fieldset>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!--************************************
                Login Register End
        *************************************-->
    </main>
    <!--************************************
            Main End
    *************************************-->
    <div class="modal fade tg-categoryModal" tabindex="-1">
        <div class="modal-dialog tg-modaldialog" role="document">
            <div class="modal-content tg-modalcontent">
                <div class="tg-modalhead">
                    <h2>Toute les cat√©gories</h2>
                    <span class="tg-selecteditems">05 Items Selected</span>
                </div>
                <div class="tg-modalbody">
                    <form class="tg-themeform tg-formrefinesearch">
                        <div class="tg-column">
                            <div class="tg-checkboxgroup">

                            </div>

                    </form>
                </div>
                <div class="tg-modalfoot">
                    <button class="tg-btn" type="submit">apply</button>
                    <button class="tg-btn" type="submit">Reset</button>
                </div>
            </div>
        </div>
    </div>
    <!--************************************
            Theme Modal Box End
    *************************************-->
{% endblock %}