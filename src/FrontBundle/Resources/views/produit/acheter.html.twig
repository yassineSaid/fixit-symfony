    <script>
        $(document).ready(function () {
            $("#quantite").keyup(function () {
                console.log(this.value);
                if (parseInt(this.value)<={{ produit.quantite }})
                {
                    document.getElementById("total").value=(parseInt(document.getElementById("quantite").value)*parseInt(document.getElementById("prix").value));
                    $("#quantite").css("color","#000");
                    $("#quantite").css("border-color","#ddd");
                }
                else
                {
                    $("#quantite").css("color","red");
                    $("#quantite").css("border-color","red");
                    document.getElementById("total").value="";
                }
            });
            $("#acheter").click(function (e) {
                if (parseInt($("#quantite").val())>{{ produit.quantite }})
                {
                    e.preventDefault();
                }
            })
        })
    </script>
