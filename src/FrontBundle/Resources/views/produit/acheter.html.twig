                                                                            </div>

                                                                            <ul class="tg-companycontactinfo">
                                                                                <li>
                                                                                    <span data-toggle="tooltip" data-placement="top" title="Click to view Number" data-last="34 - 562 - 6">{{ produit.CategorieProduit.nom }}</em></span>
                                                                                </li>
                                                                                <li>
                                                                                    <img src="{{ asset("service/images/icons/date.png") }}" width="30">
                                                                                    <span data-toggle="tooltip" data-placement="top" title="Click to view Number" data-last="34 - 562 - 6">{{ produit.dateExp  |  date('d/m/Y H:i:s') }}</em></span>
                                                                                </li>

                                                                                <li>
                                                                                    <img src="{{ asset("service/images/icons/scoin.png") }}" width="30">
                                                                                    <div class="form-group">
                                                                                        <input type="text" name="quantite" class="form-control" placeholder="prix" id="prix" value="{{produit.prix }}" disabled>
                                                                                    </div> </li>
                                                                                </li>
