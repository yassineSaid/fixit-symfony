<script src="{{ asset("BackResources/js/app.js") }}"></script>
<script>$( document ).ready(function() {
        ajaxCall();
        function ajaxCall(){
            $.ajax({
                url: '{{ path('main_notification') }}',
                method: 'post',
                data: {},
                success: function(msg) {
                    refreshList(msg);
                }
            });
        }

        function refreshList(msg) {
            $('#notification').html("");
            $.each(msg.notification, function (i,item) {

                let li = '<a href="#" class="list-group-item">\n' +
                    '            <div class="row no-gutters align-items-center">\n' +
                    '                <div class="col-2">\n' +
                    '                    <img src="../../../../fixit/web/uploads/images/outil/'+item.icon+'" width=40">\n' +
                    '                </div>\n' +
                    '                <div class="col-10">\n' +
                    '                    <div class="text-dark">' + item.title + '</div>\n' +
                    '                    <div class="text-muted small mt-1">' + item.description + '</div>\n' +
                    '                </div>\n' +
                    '            </div>\n' +
                    '        </a>';
                $('#notification').append(li);
            });
        }
        setInterval(function(){
            ajaxCall();
        }, 5000);

    });</script>
