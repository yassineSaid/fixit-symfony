    $( document ).ready(function() {
        getData();
        function getData() {
            $.ajax({
                url: '{{ path('main_count_like_currentuser') }}',
                method: 'post',
                data: {id : "{{ app.user.id }}"},
                success: function(msg) {
                    console.log(msg.nbrl);
                    $('#likes').html(" "+msg.nbrl[0][1]+" ");
                    $('#dislikes').html(" "+msg.nbrd[0][1]+" ");
                }
            });
        }
       setInterval(function(){
            getData();
        }, 5000);

    });
</script>
